<div class="container d-flex flex-column w-75">
  <div class="d-flex justify-content-center">
    <h1>General Shopping List</h1>
  </div>
  <div class="mt-3">
    <% if @missing_ingredients.length == 0 %>
      <h4 class="mt-5 fst-italic" >There are no missing ingredients that you must be purchased</h2>
    <% else %>
      <div class="d-flex justify-content-between">
        <h4>Amount of ingredients need to buy: <%= @missing_ingredients.length %></h4>
        <h4>Total value of foods neded: $ <%= @total_price %> </h4>
      </div>
      <table class="table">
        <thead class="table-dark">
          <tr>
            <th>Food</th>
            <th>Quantity</th>
            <th>Value</th>
          </tr>
        </thead>
        <tbody>
          <% @missing_ingredients.each do |ingredient| %>
            <tr>
              <td><%= ingredient[:name] %></td>
              <td><%= ingredient[:quantity] %> <%=ingredient[:unit]%></td>
              <td>$ <%= ingredient[:price] %></td>
            </tr>
          <% end %>
        </tbody>
      <% end %>
    </div>
  </div>
